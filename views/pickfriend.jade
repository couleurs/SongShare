extends layout

block content
  .container
    .row
      .col-xs-12
        if (friends.length == 0)
          .row
            hr
          .row
            a(href='/friends'): h5.text-center.blank-message Go add some friends!
          .row
            hr
   
        else
          h2 Online
          .row
            each friend, i in friends
              if (friend.available)
                .col-xs-12.col-lg-3.col-md-4
                  .row
                    .col-xs-8
                      h3
                        small.user-status.user-online
                          span.glyphicon.glyphicon-user
                        =friend.username
                    .col-xs-3.col-xs-offset-1
                      form.pull-right#formChooseFriend(name='chooseFriend' method='post' action='/listen' role='form')
                        .form-group
                          input.form-control(type='hidden' name='video_id' value=video_id)
                          input.form-control(type='hidden' name='thumbnail_url' value=thumbnail_url)
                          input.form-control(type='hidden' name='video_title' value=video_title)
                          input.form-control(type='hidden' name='username' value=friend.username)
                        button.btn.btn-xs.btn-warning.remove-friend-button(type='submit')
                          span.glyphicon.glyphicon-headphones
                  hr

          h2 Offline
          .row
            each friend, i in friends
              if (!friend.available)
                .col-xs-12.col-lg-3.col-md-4
                  .row
                    .col-xs-8
                      h3
                        small.user-status.user-offline
                          span.glyphicon.glyphicon-user
                        =friend.username
                    .col-xs-3.col-xs-offset-1
                      form.pull-right#formChooseFriend(name='chooseFriend' method='post' action='/listen' role='form')
                        .form-group
                          input.form-control(type='hidden' name='video_id' value=video_id)
                          input.form-control(type='hidden' name='thumbnail_url' value=thumbnail_url)
                          input.form-control(type='hidden' name='video_title' value=video_title)
                          input.form-control(type='hidden' name='username' value=friend.username)
                        button.btn.btn-xs.btn-warning.remove-friend-button(type='submit')
                          span.glyphicon.glyphicon-headphones
                  hr