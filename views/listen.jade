extends layout

block content
  .container
    .row
      .col-xs-12.col-md-offset-1.col-lg-offset-2
        .h3 Listening with
          strong  #{partner_name}        

  .container
    .row
      .col-xs-12.col-sm-5.col-md-4.col-md-offset-1.col-lg-3.col-lg-offset-2
        #player(data-videoid='#{videoId}', data-listeningroomid='#{listeningroom_id}') Please wait until the other listener connects   
      .col-xs-12.col-sm-7.col-md-6.col-lg-5
        .input-group.chat-box.pull-right
          input#chatinput.form-control(type='text' placeholder='Chat' name='message')
          span.input-group-btn
            button#chatsubmit.btn.btn-default(type='submit', data-username='#{session.user.username}')
              span.glyphicon.glyphicon-comment
        .row
          .col-xs-12
            #chatroom


  script(src="/socket.io/socket.io.js")
  script(src='/js/videoplayer.js')