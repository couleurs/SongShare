extends layout

block content
  .container
    h1 Listen

  .container
    .row
      .col-xs-12.col-sm-3
        img.img-responsive.album-art(src='http://ecx.images-amazon.com/images/I/81tEvdYVSPL._SL1417_.jpg', alt='album art')
      .col-xs-12.col-sm-9
        .row
          .col-xs-12.col-sm-6
            .h3.song-name M83 - Outro
          .col-xs-12.col-sm-3.hidden-xs: .h5.text-right 1:45 / 4:22
          .col-xs-12.col-sm-3.visible-xs: .h5 1:45 / 4:22
          .col-xs-12.col-sm-9
            .progress: .progress-bar(role='progressbar' aria-valuenow='40' aria-valuemin='0' aria-valuemax='100' style='width: 40%')
          .col-xs-12.col-sm-9
            .btn-group.btn-group-justified
              .btn-group: button.btn.btn-default(type='button'): span.glyphicon.glyphicon-volume-up
              .btn-group: button.btn.btn-default(type='button'): span.glyphicon.glyphicon-heart
              .btn-group: button.btn.btn-default(type='button'): span.glyphicon.glyphicon-pause
              .btn-group: button.btn.btn-default(type='button'): span.glyphicon.glyphicon-step-forward
              .btn-group: button.btn.btn-default(type='button'): span.glyphicon.glyphicon-list
  .container
    .row
      .col-xs-12.col-sm-4
        .h4 Listening With
        ul.list-unstyled.listning-with-list
          li: a(href='/user/1') Bob Durand

  .container
    .row
      .col-xs-12
        #player(data-listeningroomid='#{videoId}') Please wait until the other listener connects



  script(src="/socket.io/socket.io.js")
  script(src='/js/videoplayer.js')