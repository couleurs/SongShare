extends layout

block content
  .container
    h1 Pick a song

  // Search Box
  #receiver(data-name='#{receiver_username}')
  .container
    .row
      .col-xs-12.col-lg-8
        .input-group
          input#search-bar.form-control(type='text' placeholder='Search')
          span.input-group-btn
            button.btn.btn-default(type='button')
              span.glyphicon.glyphicon-search

  .container
    .row#yt-results
